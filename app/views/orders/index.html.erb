<h3>Orders list of <%= current_user.email %> </h3> 

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Status</th>
    <th>Pay type</th>
    <th>Ref No.</th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td>
      <% if order.is_outstanding %>
        <%= "pending !" %>
      <% else %>
        <%= "Finished v" %>
      <% end %>

    </td>
    <td><%= order.pay_type %></td>
    <td><%= order.id %></td>
    <td><%= link_to 'Show', order %></td>
    
  </tr>
<% end %>
</table>

<br />


